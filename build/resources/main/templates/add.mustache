<div class="container pt-5">
    <form name="addAuthor" method="post" action="/author/add">
        <div class="mb-3">
            <label for="authorFirstNameInput" class="form-label">Имя</label>
            <input class="form-control" id="authorFirstNameInput"
                   name="authorFirstName" type="text" placeholder="Иван">
        </div>
        <div class="mb-3">
            <label for="authorLastNameInput" class="form-label">Отчество</label>
            <input class="form-control" id="authorLastNameInput"
                   name="authorLastName" type="text" placeholder="Сергеевич">
        </div>
        <div class="mb-3">
            <label for="authorMiddleNameInput" class="form-label">Фамилия</label>
            <input class="form-control" id="authorMiddleNameInput"
                   name="authorMiddleName" type="text" placeholder="Тургенев">
        </div>
        <div class="mb-3">
            <label for="bookNameInput" class="form-label">Название книги</label>
            <input class="form-control" id="bookNameInput"
                   name="bookName" type="text" placeholder="Отцы и дети">
        </div>
        <div class="mb-3">
            <label for="bookPriceInput" class="form-label">Цена книги</label>
            <input clas="form-control" id="bookPriceInput"
                    name="bookPrice" type="text" placeholder="###р">
        </div>
        <button type="submit" class="btn btn-outline-primary">Добавить</button>
    </form>
