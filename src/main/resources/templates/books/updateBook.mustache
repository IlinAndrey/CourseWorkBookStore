{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-10">
        <h1>
            Модификация книги</h1>
        <div class="col-md-10">
            {{#bookInfo}}
                <form method="post">
                    <div class="form-group">
                        <label for="book_name">Название книги</label>
                        <input type="text" class="form-control" id="book_name" value="{{bookName}}" placeholder="Пожалуйста, введите название книги">
                    </div>
                    <div class="form-group">
                        <label for="book_author">
                            автор</label>
                        <input type="text" class="form-control" id="book_author" value="{{bookAuthor}}" placeholder="
Пожалуйста, введите автора">
                    </div>
                    <div class="form-group">
                        <label for="book_publish">издатель</label>
                        <input type="text" class="form-control" id="book_publish" value="{{bookPublish}}" placeholder="
Пожалуйста, введите издателя">
                    </div>
                    <div class="form-group">
                        <label for="book_price">
                            цена</label>
                        <input type="text" class="form-control" id="book_price" value="{{bookPrice}}" placeholder="Пожалуйста, введите цену">
                    </div>
                    <div class="form-group">
                        <label for="book_count">
                            Количество</label>
                        <input type="text" class="form-control" id="book_count" value="{{bookCount}}" placeholder="Пожалуйста, введите количество">
                    </div>
                    <div class="form-group">
                        <label for="book_detail">
                            Больше информации</label>
                        <textarea class="form-control" id="book_detail" placeholder="Пожалуйста, введите ваши данные">{{bookDetail}}</textarea>
                    </div>
                </form>
                <a href="/" role="button" class="btn btn-outline-danger">
                    отменить</a>
                <button type="button" class="btn btn-outline-secondary" id="btn-booksUpdate">Изменения завершены</button>
            {{/bookInfo}}
        </div>
    </div>
</div>
{{>layout/footer}}