{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="col-md-12">
        <h1>Регистрация книги</h1>
        <div class="col-md-4">
            <form method="get">
                <div class="form-group">
                    <label for="book_name">Название книги</label>
                    <input type="text" class="form-control" id="book_name" placeholder="Пожалуйста, введите название книги">
                </div>
                <div class="form-group">
                    <label for="book_author">Автор</label>
                    <input type="text" class="form-control" id="book_author" placeholder="Пожалуйста, введите автора">
                </div>
                <div class="form-group">
                    <label for="book_publish">Издатель</label>
                    <input type="text" class="form-control" id="book_publish" placeholder="Пожалуйста, введите издателя">
                </div>
                <div class="form-group">
                    <label for="book_price">Цена</label>
                    <input type="text" class="form-control" id="book_price" placeholder="Пожалуйста, введите цену">
                </div>
                <div class="form-group">
                    <label for="book_count">Количество</label>
                    <input type="text" class="form-control" id="book_count" placeholder="Пожалуйста, введите количество">
                </div>
                <div class="form-group">
                    <label for="book_detail">Больше информации</label>
                    <textarea class="form-control" id="book_detail" placeholder="Пожалуйста, введите ваши данные"></textarea>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-outline-danger">Отменить</a>
            <button type="button" class="btn btn-outline-secondary" id="btn-booksSave">Сохранить</button>
        </div>
    </div>
</div>
{{>layout/footer}}